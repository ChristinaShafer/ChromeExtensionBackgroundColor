{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "permissions": ["declarativeContent","storage","activeTab"],
      "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            
            "128": "magic-hat.png"
          }
      },
      "icons": {
        "128": "magic-hat.png"
      },
      "options_page": "options.html",
    "manifest_version": 2
  }